{
  "name": "<%= name %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "main": "./lib/index.js",
  "scripts": {<% if (includeBrowserPackaging) { %>
    "clean": "rm -fR dist/",
    "rebuild": "npm run clean && npm run build",
    "prepublish": "npm run rebuild",
    "build": "babel lib --out-dir dist/ && BABEL_ENV=rollup rollup -c rollup.config.js",<% } %>
    "test": "npm run test:lint && npm run test:unit",
    "test:unit": "mocha --reporter spec 'test/**/*.test.js'",
    "test:lint": "lint",
    "test:coverage": "nyc npm run test:unit",
    "test:watch": "mocha --watch --reporter dot 'test/**/*.test.js'",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickhulce/<%= name %>.git"
  },
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickhulce/<%= name %>/issues"
  },
  "homepage": "https://github.com/patrickhulce/<%= name %>#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
